<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">

    <h5>Date : <%= Time.now.strftime("%d %b %Y") %></h5>
    <h5>Vendor : <%= @vendor.name %></h5>
    <div>
      <%= simple_form_for [@vendor, @bill] do |f| %>
        <% f.association :vendor %>
        <%= f.association :user %>
        <%= f.input :price, as: :currency %>
        <%= f.submit "Create the QR code", class: "btn btn-primary" %>
      <% end %>
    </div>

    </div>
  </div>
</div>
